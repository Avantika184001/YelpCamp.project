<html>
	<head>
		<title>Yelp Camp</title>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
		<link rel="stylesheet" href="/stylesheet/main.css">
	</head>
	<body>
		
	<nav class="navbar navbar-default alert alert-dark bg-dark">
   <div class="container-fluid pd-top-1">
	   <div class="navbar-header">
		   <a class="navbar-brand text-light" href="/campgrounds">YelpCamp</a>
	   </div>
	  <div data-toggle="collapse" data-target="navbar-collapse">
		  <ul class="navbar-right nav">
			  <%if(!currentUser){ %>
			  <li class="nav-item text-light"  style="padding: 5px;"> <a href="/login"> LogIn </a> </li>
			   <li class="nav-item text-light"  style="padding: 5px;"> <a href="/register"> Sign Up </a> </li>
			 <% }else{ %>
			  <li class="nav-item text-light" style="padding: 5px;">Signed In As <%= currentUser.username %></li>
			   <li class="nav-item text-light" style="padding: 5px;"> <a href="/logout"> LogOut </a> </li>
			<%  }%>
		  </ul>
	   </div>
	 </div>
</nav>
		  <div class="container">
        
        <% if(error && error.length > 0){ %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>
        <% if(success && success.length > 0){ %>
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div>
        <% } %>
    </div>
