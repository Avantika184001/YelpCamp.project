  <%- include ("../partials/header") %>

<div class="container mb-3">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">YelpCamp</p>
				<div class="list-group">
					<li class="list-group-item active">info 1</li>
					<li class="list-group-item">info 2</li>
					<li class="list-group-item">info 3</li>
			</div>						
		</div>
		<div class="col-md-9">
			 <div class="img-thumbnail">
				       <div class=" text-center"><img class="img-responsive text-center" src="<%=campground.image%>"></div>
				<div class="caption">
					<h4 class="text-right">$9.99/night</h4>
					<h4><%=campground.name %></h4>
					<p><%=campground.description %></p>
				    <p><em>Submitted By <%= campground.author.username%></em> </p>
					
				    <div class="container">
  							<div class="row">
								<% if(currentUser && campground.author.id.equals(currentUser._id)){ %>
   								 <div class="col-sm-3">
   									<a class="btn btn-md btn-info " href="/campgrounds/<%=campground._id%>/edit">Edit The Campground</a>
   								 </div>
   						        <div class="col-sm-3">
   									<form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
										<button id="delete-form" class="btn  btn-danger ">Delete The Campground</button>
									</form>
    						    </div>
					           <% }%>
						    </div>
				    </div>
					
			 </div>
	    </div>
			<div class="well bg-light mb-3 p-3">
				<hr>
				<div class="text-right">
					<a class="btn btn-sm " href="/campgrounds/<%=campground._id%>/comments/new">Add New Comment</a>
				</div>
		              <hr>
				<% campground.comments.forEach(function(comment){ %>
				<div class="row">
					<div class="col-md-12">
						<strong>
							<%= comment.author.username %>
						</strong>
						<span class="text-muted">10 days ago</span>
						<p><%= comment.text%></p>
						
						 <div class="container">
  							<div class="row">
								<% if(currentUser && campground.author.id.equals(currentUser._id)){ %>
						<div class="col-sm-1">
   									<a class="btn btn-xs btn-outline-info text-right"
									  href="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>/edit ">Edit</a>
   								 </div>
   						        <div class="col-sm-1 text-right">
   									<form action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
										<button id="delete-form" class="btn btn-xs btn-outline-danger ">Delete</button>
									</form>
						  </div>
					           <% }%>
						    </div>
						</div>
					</div>
			    </div>
			    <% }); %>
			</div>
		</div>
	</div>
</div>

 
<%- include ("../partials/footer") %>